<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.denalo.rshc.rekin.rsd.app.MainActivity">

    <TextView
        android:text="(此軟件仍在開發階段, 如有BUG請見諒.)\n\n謝謝使用Rekin Site Designer\n\nBy Redsuns S.H.Chan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/new_project"
        android:layout_alignRight="@+id/new_project"
        android:layout_alignEnd="@+id/new_project"
        android:id="@+id/info" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Project"
        android:id="@+id/open_project"
        android:layout_above="@+id/quit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/new_project"
        android:layout_alignEnd="@+id/new_project" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Project"
        android:id="@+id/new_project"
        android:layout_above="@+id/open_project"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/quit"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/open_project"
        android:layout_alignStart="@+id/open_project"
        android:layout_alignRight="@+id/open_project"
        android:layout_alignEnd="@+id/open_project" />

</RelativeLayout>
